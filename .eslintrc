{
    "extends": ["eslint:recommended", "plugin:react/recommended"],

    "env": {
        "browser": true,
        "node": true
    },

    "globals": {
        "React": true
    },

    "parser": "babel-eslint",

    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
        }
    },

    "plugins": [
        "react"
    ],

    "settings": {
        "react": {
            "createClass": "createClass",
            "pragma": "React"
        }
    },

    "rules": {
        "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }],
        "jsx-quotes": ["warn", "prefer-double"],
        "quotes": ["warn", "single"]
    }
}
